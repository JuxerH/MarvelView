<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.finalwork.marvelview.viewmodel.SectionViewModel"/>
        <variable
            name="attribution"
            type="String"/>

        <variable
            name="sectionViewModel"
            type="SectionViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".ui.section.view.SectionActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

            <!--Attribution-->

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:text="@{attribution}"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                tools:text="Data provided by Marvel. Â© 2020 Marvel"/>

            <ImageView
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/design_fab_size_normal"
                android:layout_height="@dimen/design_fab_size_normal"
                android:layout_gravity="end"
                android:onClick="@{() -> sectionViewModel.closeClick()}"
                android:src="@drawable/ic_close_white_24dp"/>

        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>


</layout>